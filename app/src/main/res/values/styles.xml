<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModernProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:progressBackgroundTint">@color/light_gray</item>
        <item name="android:progressTint">@color/accent_beige</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 